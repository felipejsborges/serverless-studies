  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Launch Serverless Offline",
          "program": "${workspaceRoot}/node_modules/serverless/bin/serverless",
          "args": ["offline", "start"],
          "sourceMaps": true,
          "outFiles": ["${workspaceRoot}/.webpack/**/*.js"],
          "protocol": "inspector",
          "runtimeExecutable": "node"
      }
  ]
}